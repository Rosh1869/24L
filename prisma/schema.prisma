generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Worklog {
  id          String   @id @default(cuid())
  description String?
  date        DateTime @default(now())
  startTime   DateTime
  endTime     DateTime
  hours       Float?
}
